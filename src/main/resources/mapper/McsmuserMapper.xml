<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.McsmuserDao">

    <resultMap type="entity.Mcsmuser" id="McsmuserMap">
        <result property="userid" column="userid" jdbcType="VARCHAR"/>
        <result property="mcsmusername" column="mcsmusername" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryMcsmuserByUserid" resultMap="McsmuserMap">
        select
            userid, mcsmusername
        from McsmUser
        where userid = #{userid}
    </select>

    <!--查询mcsmusername单个-->
    <select id="queryMcsmuserByMcsmusername" resultMap="McsmuserMap">
        select
          userid, mcsmusername
        from McsmUser
        where mcsmusername = #{mcsmusername}
    </select>

    <!--查询指定行数据-->
    <select id="queryMcsmuserByMcsmuser" resultMap="McsmuserMap">
        select
          userid, mcsmusername
        from McsmUser
        <where>
            <if test="userid != null and userid != ''">
                and userid = #{userid}
            </if>
            <if test="mcsmusername != null and mcsmusername != ''">
                and mcsmusername = #{mcsmusername}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="countMcsmuser" resultType="java.lang.Long">
        select count(1)
        from McsmUser
        <where>
            <if test="userid != null and userid != ''">
                and userid = #{userid}
            </if>
            <if test="mcsmusername != null and mcsmusername != ''">
                and mcsmusername = #{mcsmusername}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertMcsmuser" keyProperty="mcsmusername" useGeneratedKeys="true">
        insert into McsmUser(userid, mcsmusername)
        values (#{userid}, #{mcsmusername}, #{allowedservers})
    </insert>

    <insert id="insertMcsmuserBatch" keyProperty="mcsmusername" useGeneratedKeys="true">
        insert into McsmUser(userid, mcsmusername)
        values
        <foreach collection="list" item="entity" separator=",">
        (#{entity.userid}, #{entity.mcsmusername}, #{entity.allowedservers})
        </foreach>
    </insert>

    <insert id="insertOrUpdateMcsmuserBatch" keyProperty="mcsmusername" useGeneratedKeys="true">
        insert into McsmUser(userid, mcsmusername)
        values
        <foreach collection="list" item="entity" separator=",">
            (#{entity.userid}, #{entity.mcsmusername}, #{entity.allowedservers})
        </foreach>
        on duplicate key update
        mcsmusername = values(mcsmusername)
    </insert>

    <!--通过主键修改数据-->
    <update id="updateMcsmuser">
        update McsmUser
        <set>
            <if test="userid != null and userid != ''">
                userid = #{userid},
            </if>
        </set>
        where userid = #{userid}
    </update>

    <!--通过mcsmusername删除-->
    <delete id="deleteMcsmuserByMcsmusername">
        delete from McsmUser where mcsmusername = #{mcsmusername}
    </delete>

    <!--通过主键删除-->
    <delete id="deleteMcsmuserByUserid">
        delete from McsmUser where userid = #{userid}
    </delete>

</mapper>

