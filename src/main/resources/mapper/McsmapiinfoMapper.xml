<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.McsmapiinfoDao">

    <resultMap id="BaseResultMap" type="entity.Mcsmapiinfo">
        <!--@Table McsmApiInfo-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="apikey" column="apikey" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryMcsmapiinfoById" resultMap="BaseResultMap">
        select
          id, url, apikey
        from dabaiyunmanager.McsmApiInfo
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, url, apikey
        from dabaiyunmanager.McsmApiInfo
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryMcsmapiinfoByMcsmapiinfo" resultMap="BaseResultMap">
        select
          id, url, apikey
        from dabaiyunmanager.McsmApiInfo
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="apikey != null and apikey != ''">
                and apikey = #{apikey}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertMcsmapiinfo" keyProperty="id" useGeneratedKeys="true">
        insert into dabaiyunmanager.McsmApiInfo(url, apikey)
        values (#{url}, #{apikey})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateMcsmapiinfo">
        update dabaiyunmanager.McsmApiInfo
        <set>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="apikey != null and apikey != ''">
                apikey = #{apikey},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteMcsmapiinfoById">
        delete from dabaiyunmanager.McsmApiInfo where id = #{id}
    </delete>

</mapper>