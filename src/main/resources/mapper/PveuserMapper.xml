<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.PveuserDao">

    <resultMap type="entity.Pveuser" id="PveuserMap">
        <result property="userid" column="userid" jdbcType="VARCHAR"/>
        <result property="pveuserid" column="pveuserid" jdbcType="VARCHAR"/>
        <result property="pvepassword" column="pvepassword" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryPveuserByUserid" resultMap="PveuserMap">
        select
          userid, pveuserid, pvepassword
        from PveUser
        where userid = #{userid}
    </select>

    <!--查询单个-->
    <select id="queryPveuserByPveuserid" resultMap="PveuserMap">
        select
            userid, pveuserid, pvepassword
        from PveUser
        where pveuserid = #{pveuserid}
    </select>

    <!--查询指定行数据-->
    <select id="queryPveuserByPveuser" resultMap="PveuserMap">
        select
          userid, pveuserid, pvepassword
        from PveUser
        <where>
            <if test="userid != null and userid != ''">
                and userid = #{userid}
            </if>
            <if test="pveuserid != null and pveuserid != ''">
                and pveuserid = #{pveuserid}
            </if>
            <if test="pvepassword != null and pvepassword != ''">
                and pvepassword = #{pvepassword}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="countPveuser" resultType="java.lang.Long">
        select count(1)
        from PveUser
        <where>
            <if test="userid != null and userid != ''">
                and userid = #{userid}
            </if>
            <if test="pveuserid != null and pveuserid != ''">
                and pveuserid = #{pveuserid}
            </if>
            <if test="pvepassword != null and pvepassword != ''">
                and pvepassword = #{pvepassword}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insertPveuser" keyProperty="userid" useGeneratedKeys="true">
        insert into PveUser(userid, pveuserid, pvepassword)
        values (#{userid}, #{pveuserid}, #{pvepassword})
    </insert>

    <insert id="insertPveuserBatch" keyProperty="userid" useGeneratedKeys="true">
        insert into PveUser(pveuserid, pvepassword)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.pveuserid}, #{entity.pvepassword})
        </foreach>
    </insert>

    <insert id="insertOrUpdatePveuserBatch" keyProperty="userid" useGeneratedKeys="true">
        insert into PveUser(pveuserid, pvepassword)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.pveuserid}, #{entity.pvepassword})
        </foreach>
        on duplicate key update
        pveuserid = values(pveuserid),
        pvepassword = values(pvepassword)
    </insert>

    <!--通过主键修改数据-->
    <update id="updatePveuser">
        update PveUser
        <set>
            <if test="pveuserid != null and pveuserid != ''">
                pveuserid = #{pveuserid},
            </if>
            <if test="pvepassword != null and pvepassword != ''">
                pvepassword = #{pvepassword},
            </if>
        </set>
        where userid = #{userid}
    </update>

    <!--通过主键删除-->
    <delete id="deletePveuserByuserid">
        delete from PveUser where userid = #{userid}
    </delete>

    <!--通过pveusername删除-->
    <delete id="deletePveuserByPveuserid">
        delete from PveUser where pveuserid = #{pveuserid}
    </delete>

</mapper>

