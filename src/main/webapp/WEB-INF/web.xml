<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>Servlet.Listener.MyServletContextLister</listener-class>
    </listener>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PageData</servlet-name>
        <servlet-class>Servlet.PageData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageData</servlet-name>
        <url-pattern>/PageData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PVEOption</servlet-name>
        <servlet-class>Servlet.PVEOption</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PVEOption</servlet-name>
        <url-pattern>/PVEOption</url-pattern>
    </servlet-mapping>

</web-app>